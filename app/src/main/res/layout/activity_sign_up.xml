<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Welcome \nPlease sign up here !"
                android:textColor="@color/colorApp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30sp"
                android:src="@drawable/img" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="25sp">

            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:drawableEnd="@drawable/ic_fullname"
                android:drawableTint="@color/colorApp"
                android:hint="Full Name"
                android:inputType="text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/colorApp"
                android:hint="CIN"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/colorApp"
                android:hint="Phone"
                android:inputType="number"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorApp"
            app:cornerRadius="20sp"/>

        <TextView
            android:id="@+id/goToSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account !"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:textSize="16sp"
            />

    </LinearLayout>

</ScrollView>